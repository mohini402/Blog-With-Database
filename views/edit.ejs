<%- include("partials/header"); -%>
<h1>Edit Blog</h1>
<form action="/edit/<%= postId %>" method="post">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="postTitle" value="<%= title %>">
    <label>Post</label>
    <textarea class="form-control" name="postBody" rows="5" cols="30"><%= content %></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Edit</button>
</form>
<%- include("partials/footer"); -%>
